---

interface Props {
  label?: string;
  placeholder?: string;
  name?: string;
  required?: boolean;
  rows?: number;
  class?: string;
  [key: string]: any;
}

const {
  label,
  placeholder,
  name,
  required = false,
  rows = 4,
  class: className = '',
  ...rest
} = Astro.props as Props;

const textareaClasses = `bg-white rounded-lg px-4 py-2 w-full shadow-sm focus:outline-none focus:ring-1 focus:ring-[var(--color-border)] focus:border-transparent focus:shadow-md transition-all resize-none ${className}`;
---

<div class="flex flex-col gap-2">
  {label && (
    <label class="text-sm font-regular text-(--color-foreground) text-left">
      {label}
      {required && <span class="text-(--color-secondary) ">*</span>}
    </label>
  )}
  <textarea
    placeholder={placeholder}
    name={name}
    required={required}
    rows={rows}
    class={textareaClasses}
    {...rest}
  ></textarea>
</div>