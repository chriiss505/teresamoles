---

import Button from "./Button.astro";
const { title, id, showSubmit = true, showCloseButton = true } = Astro.props;
---

<div
  data-dialog={id}
  class="fixed inset-0 z-50 flex items-center justify-center bg-black/50 backdrop-blur-sm hidden"
>
  <div class="dialog-inner bg-[var(--color-background)] rounded-xl shadow-xl max-w-2xl w-[90vw] sm:w-full p-6 sm:p-12 relative max-h-[80vh] overflow-y-auto">
    {showCloseButton && (
      <button
        type="button"
        class="absolute top-3 right-3 text-gray-500 hover:text-gray-700"
        data-close-dialog
      >
        âœ•
      </button>
    )}

    {title && <h2 class="text-xl font-semibold mb-4">{title}</h2>}

    <!-- Usa <slot /> en lugar de {children} -->
    <div class="flex flex-col gap-3 sm:gap-4">
      <slot />
    </div>

  </div>
</div>
