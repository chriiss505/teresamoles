---
import Button from "./Button.astro";
const { title } = Astro.props;
---

<div
  data-dialog
  class="fixed inset-0 z-50 flex items-center justify-center bg-black/50 backdrop-blur-sm hidden"
>
<div class="bg-[var(--color-background)] rounded-xl shadow-xl max-w-md w-[90vw] sm:w-full p-8 sm:p-16 relative">
    <button
      type="button"
      class="absolute top-3 right-3 text-gray-500 hover:text-gray-700"
      data-close-dialog
    >
      âœ•
    </button>

    {title && <h3 >{title}</h2>}

    <!-- Usa <slot /> en lugar de {children} -->
    <div class="mt-4 flex flex-col gap-4">
      <slot />
    </div>

    <div class="mt-6 flex justify-center gap-3">
        <Button label="Cerrar" variant="outlined" />

        <Button label="Enviar" />
    </div>
  </div>
</div>