---
import Button from "./Button.astro";
const { title } = Astro.props;
---

<div
  data-dialog
  class="fixed inset-0 z-50 flex items-center justify-center bg-black/50 backdrop-blur-sm hidden"
>
  <div class="bg-[var(--color-background)] rounded-xl shadow-xl max-w-md w-[90vw] sm:w-full p-8 sm:p-16 relative">
    <button
      type="button"
      class="absolute top-3 right-3 text-gray-500 hover:text-gray-700"
      data-close-dialog
    >
      ✕
    </button>

    {title && <h2 class="text-xl font-semibold mb-4">{title}</h2>}

    <!-- Usa <slot /> en lugar de {children} -->
    <div class="flex flex-col gap-4">
      <slot />
    </div>

    <div class="mt-6 flex flex-col sm:flex-row justify-center gap-3">
      <Button 
        label="Cerrar" 
        variant="outlined"
        data-close-dialog
      />

      <Button 
        label="Enviar"
      />
    </div>
  </div>
</div>

<script>
  function initDialog() {
    const dialog = document.querySelector("[data-dialog]");
    const openBtn = document.querySelector("[data-open-dialog]");
    const closeButtons = document.querySelectorAll("[data-close-dialog]");

    if (dialog && openBtn) {
      openBtn.addEventListener("click", () => {
        dialog.classList.remove("hidden");
      });

      closeButtons.forEach(btn => {
        btn.addEventListener("click", (e) => {
          e.preventDefault();
          dialog.classList.add("hidden");
        });
      });

      // Cerrar al hacer click fuera del modal
      dialog.addEventListener("click", (e) => {
        if (e.target === dialog) {
          dialog.classList.add("hidden");
        }
      });
    }
  }

  // Inicializar al cargar
  initDialog();

  // Re-inicializar después de navegación (si usas View Transitions)
  document.addEventListener("astro:page-load", initDialog);
</script>