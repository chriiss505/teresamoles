---
import Button from "./Button.astro";
const { title, id, showSubmit = true } = Astro.props;
---

<div
  data-dialog={id}
  class="fixed inset-0 z-50 flex items-center justify-center bg-black/50 backdrop-blur-sm hidden"
>
  <div class="bg-[var(--color-background)] rounded-xl shadow-xl max-w-2xl w-[90vw] sm:w-full p-6 sm:p-12 relative">
    <button
      type="button"
      class="absolute top-3 right-3 text-gray-500 hover:text-gray-700"
      data-close-dialog
    >
      âœ•
    </button>

    <!-- Usa <slot /> en lugar de {children} -->
    <div class="flex flex-col gap-3 sm:gap-4">
      {title && <h2 class="text-xl font-semibold">{title}</h2>}
      <slot />
    </div>

    <div class="mt-6 flex flex-col sm:flex-row justify-center gap-3">
      <Button
        label="Cerrar"
        variant="outlined"
        data-close-dialog
      />

      {showSubmit && (
        <Button
          label="Enviar"
        />
      )}
    </div>
  </div>
</div>

