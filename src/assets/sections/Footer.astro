---
import Badge from '../../components/Badge.astro';
---

<footer class="py-6 px-4 z-10">
  <div class="max-w-4xl mx-auto">
    
    {/* Primera línea: Badge centrado */}
    <div class="flex justify-center mb-6">
      <Badge text="Web en construcción" variant="outline" size="sm" />
    </div>
    
    {/* Segunda línea: Logo, navegación y copyright */}
    <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
      
      {/* Logo a la izquierda */}
      <div class="flex items-center justify-start w-full sm:w-1/3 order-1">
        <img 
          src="/logo_reduced.svg" 
          alt="Logo" 
          class="w-8 h-8"
          width="32"
          height="32"
        />
      </div>
      
      {/* Navegación en el centro */}
      <nav class="flex items-center justify-center gap-4 w-full sm:w-1/3 order-2 sm:order-2">
        <a href="/privacy" class="text-xs sm:text-sm hover:underline">Privacidad</a>
        <a href="/legal" class="text-xs sm:text-sm hover:underline">Legal</a>
        <a href="/cookies" class="text-xs sm:text-sm hover:underline">Cookies</a>
      </nav>
      
          {/* Copyright - derecha - 1/3 del ancho */}
          <div class="flex items-center justify-end w-full sm:w-1/3 order-3 sm:order-3">
            <p class="text-xs text-right">
              © {new Date().getFullYear()} Teresa Molés SL.
            </p>
          </div>
      
    </div>
    
  </div>
</footer>